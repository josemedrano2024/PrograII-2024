<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblnum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num 1:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/lblnum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNumero1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:text="Num 2:" />

    <EditText
        android:id="@+id/txtNumero1"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblnum1"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="80dp"/>

    <EditText
        android:id="@+id/txtNumero2"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNumero1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp" />


    <Spinner
        android:id="@+id/spnOpciones"
        android:entries="@array/spnOpciones"
        android:layout_width="226dp"
        android:layout_height="43dp"
        android:layout_below="@+id/txtNumero2"
        android:layout_marginStart="180dp"
        android:layout_marginTop="62dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNumero2"
        android:layout_marginTop="180dp"
        android:text="Calcular"/>

    <TextView
        android:id="@+id/lblRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCalcular"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="Respuesta: ?" />




</RelativeLayout>